{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build todos .c da pasta",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "*.c"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compila todos os arquivos .c da pasta atual."
    }
  ],
  "version": "2.0.0"
}
